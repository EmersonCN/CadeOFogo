 @page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class ="form-group">
                <label asp-for ="Input.Papeis"></label>
                <input asp-for="Input.Papeis" class="form-control" disabled />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>

        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.FotoPerfil" style="width: 100%"></label>
                @if (Model.Input.FotoPerfil != null) 
                {
                    <img id="FotoPerfil"
                         class="foto-perfil-edicao"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.FotoPerfil))"
                         alt="Adicione sua foto" />
                }
            else
            {
                <img id="FotoPerfil"
                     class="foto-perfil-edicao"
                     src="https://via.placeholder.com/350x350.png?text=suba+a+sua+foto+se+desejar"
                     alt="Adicione sua foto" />
            }
                <input type="file"
                       accept=".png, .jpg, .jpeg, .gif, .tif"
                       asp-for="Input.FotoPerfil"
                       class="form-control foto-perfil-edicao-placeholder"
                       onchange="document.getElementById('FotoPerfil').src = window.URL.createObjectURL(this.files[0])" />
                       <span asp-validation-for="Input.FotoPerfil" class="text-danger"></span>
            </div>       
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}