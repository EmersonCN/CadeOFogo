@model CadeOFogo.Models.Inpe.CausaFogo

@{
    ViewData["Title"] = "Alterar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de causas prováveis do foco</h1>

<h4>Alterar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CausaFogoId" />
            <div class="form-group">
                <label asp-for="CausaFogoDescricao" class="control-label"></label>
                <input asp-for="CausaFogoDescricao" class="form-control" />
                <span asp-validation-for="CausaFogoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
