@model CadeOFogo.Areas.Cadastros.ViewsModels.Equipe.EquipeDetailsViewModel
@{
    ViewData["Title"] = "Remover";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de Equipes</h1>

<h4>Remover</h4>
<div>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EquipeNome)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.EquipeNome)
            </dd>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NomeBatalhao)
            </dd>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CompanhiaNome)
            </dd>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.PelotaoNome)
            </dd>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Ativa)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EquipeId" />
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a asp-action="Index">Retornar à lista</a>
        </form>
    </div>
