@using CadeOFogo.Areas.Cadastros.ViewsModels.Equipe
@model List<GerenciarEquipesUsuariosViewModel>
@{
    ViewData["Title"] = "Gerenciar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gerenciar papéis do usuário</h2>
            Adicionar/remover usuários para a equipe.
        </div>
        <div class="card-body">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].ApplicationUserUserId" />
                    <input type="hidden" asp-for="@Model[i].UserNome" />
                    <input asp-for="@Model[i].Selecionado" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selecionado">@Model[i].UserNome</label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Atualizar" class="btnbtn-primary" style="width:auto" />
            <a asp-action="Index" class="btnbtn-danger" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>
