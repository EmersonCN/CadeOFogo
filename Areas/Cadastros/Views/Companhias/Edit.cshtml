@model CadeOFogo.Areas.Cadastros.ViewsModels.CompanhiaEditViewModel
@{
    ViewData["Title"] = "Alterar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastro de Companhias</h1>

<h4>Alterar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompanhiaId" />
            <div class="form-group">
                <label asp-for="CompanhiaNome" class="control-label"></label>
                <input asp-for="CompanhiaNome" class="form-control" />
                <span asp-validation-for="CompanhiaNome" class="text-danger"></span>
                <label asp-for="BatalhaoInputSelect" class="control-label"></label>
                <br />
                <select asp-for="BatalhaoId" asp-items="@Model.BatalhaoInputSelect">
                    <option value="0" disabled>-- Selecione uma batalhão --</option>
                </select>
                <span asp-validation-for="BatalhaoInputSelect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
