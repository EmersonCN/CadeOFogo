@using CadeOFogo.ViewModels
@model List<GerenciarUsuariosPapeisViewModel>
@{
    ViewData["Title"] = "Gerenciar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gerenciar papéis do usuário</h2>
            Adicionar/remover papéis para o usuário @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (var i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].PapelId" />
                    <input type="hidden" asp-for="@Model[i].PapelNome" />
                    <input asp-for="@Model[i].Selecionado" class="form-check-input" />
                    <label class ="form-check-label" asp-for="@Model[i].Selecionado">@Model[i].PapelNome</label>
                </div>
            }
        <div asp-validation-summary ="All" class="text-danger"></div>
    </div>
    <div class ="card-footer">
        <input type="submit" value="Atualizar" class="btnbtn-primary" style="width:auto" />
        <a asp-action="Index" class="btnbtn-danger" style="width:auto">Cancelar</a>
    </div>
    </div>
</form>
