@using System.Net.Mime
@model CadeOFogo.ViewModels.DetalheFocoViewModel
@{
    ViewData["Title"] = "AdicionarDetalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col">
            <aside class="detalhe-foco">
                <div class="container">
                    <h2>Foco @Model.FocoId</h2>
                    <h3><label asp-for="FocoIdInpe" class="control-label"></label><br />@Model.FocoIdInpe</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="AdicionarDetalhes">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="FocoId" />
                                <div class="form-group">
                                    <label asp-for="Bioma" class="control-label"></label>
                                    <input asp-for="Bioma" class="form-control" />
                                    <span asp-validation-for="Bioma" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Alterar" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </aside>
        </div>
        <div class="col-md-4">
            <section class="detalhe-foco">
                <div id="map" class="mapa"></div>
            </section>
        </div>
    </div>
</div>

<div>
    <a asp-action="Detalhes" asp-route-id="@Model.FocoId">Retornar à lista</a>
</div>
@Html.Raw(ViewBag.mapa)